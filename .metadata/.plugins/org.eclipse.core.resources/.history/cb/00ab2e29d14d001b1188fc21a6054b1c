package com.thiagoalves.cursojava.exercicios.aula13;
import java.util.Scanner;

public class CalculoPinturaArea {

	public static void main(String[] args) {
		
		final int tamanhoLataDeTinta = 18;
		final double precoDaLataDeTinta = 80.0;
		
		Scanner area = new Scanner(System.in);
		
		System.out.println("Informe o tamanho da área a ser pintada (em metros)");
		double areaPintura = area.nextDouble();
		
		int quantidadeDeTintaNecessaria = areaPintura / 3;
		double quantidadeDeLatas = quantidadeDeTintaNecessaria / tamanhoLataDeTinta;
		
		System.out.println(quantidadeDeTintaNecessaria);
		System.out.println(quantidadeDeLatas);
		
	}
}
