package com.thiagoalves.cursojava.exercicios.aula13;
import java.util.Scanner;

public class CalculoPinturaArea {

	public static void main(String[] args) {
		
		final int tinta = 18;
		final double precoTinta = 80.0;
		
		Scanner area = new Scanner(System.in);
		
		System.out.println("Informe o tamanho da área a ser pintada (em metros)");
		double areaPintura = area.nextDouble();
		
		double quantidadeDeTinta = areaPintura / 3;
		
		System.out.println(quantidadeDeTinta);
		
	}
}
