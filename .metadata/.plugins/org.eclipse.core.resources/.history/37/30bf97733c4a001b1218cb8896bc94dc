package com.thiagoalves.cursojava.exercicios.aula13;
import java.util.Scanner;

public class CalculaAreaQuadrado {
	
	public static void main(String[] args) {
		
		Scanner numeroInformado = new Scanner(System.in);
		
		System.out.println("Informe a base do quadrado: ");
		double baseQuadrado = numeroInformado.nextDouble();
		
		System.out.println("Informe a altura do quadrado: ");
		double alturaQuadrado = numeroInformado.nextDouble();
		
		numeroInformado.close();
		
		double areaQuadrado = (baseQuadrado * alturaQuadrado) * 2;
		
		System.out.println("o dobro da área do quadrado é igual a: " + areaQuadrado);
		
		
	}

}
